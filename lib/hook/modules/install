# vim: set ft=sh:
# shellcheck shell=sh
#
# https://shellcheck.net/wiki/SC2154
# shellcheck disable=2154

modules() {
    if [ -n "$modules_load" ]; then
        add_config modules_load "$modules_load"
        { IFS=,; set -- $modules_load; unset IFS; }
        for module; do
            copy_kmod "$module"
        done
    fi
}
modules
