# vim: set ft=sh:
# shellcheck shell=sh
#
# https://shellcheck.net/wiki/SC2154
# shellcheck disable=2154

mdev -s
mdev -df 2>/dev/null &

# https://shellcheck.net/wiki/SC2034
# shellcheck disable=2034
mdev_pid="$!"

for i in 1 2; do
    find /sys/devices -name uevent |
        while IFS= read -r uevent; do
            printf add >"$uevent" 2>/dev/null
        done
done
